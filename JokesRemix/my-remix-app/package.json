{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "dev": "concurrently \"npm:dev:css\" \"remix dev\" \"npm:json-server\"",
    "start": "remix-serve build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "json-server": "json-server --watch db.json --port 3002"
  },
  "dependencies": {
    "@remix-run/node": "^1.6.4",
    "@remix-run/react": "^1.6.4",
    "@remix-run/serve": "^1.6.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.4",
    "@remix-run/eslint-config": "^1.6.4",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "concurrently": "^7.2.2",
    "eslint": "^8.15.0",
    "json-server": "^0.17.0",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
